<%if @user.errors.present?%>
    <h2>The following errors were present that prevented this action from occurring:</h2>
    <ul>
        <%@user.errors.full_messages.each do |msg|%>
        <li style="color: red"><%=msg%></li>
        <%end%>
    </ul>
    <h2>Please make the relevant changes and try again!</h2>
<%end%>

<%=form_for @user do |f|%>
<div id="formheader">
    <%=f.label :name%>
</div>
<div id="formcontent">
    <%=f.text_field :name%>
</div>

<div id="formheader">
    <%=f.label :bio%>
</div>
<div id="formcontent">
    <%=f.text_area :bio, cols: "40", rows: "10"%>
</div>

<div id="formheader">
    <%=f.label :username%>
</div>
<div id="formcontent">
    <%=f.text_field :username%>
</div>

<div id="formheader">
    <%=f.label :password%>
</div>
<div id="formcontent">
    <%=f.password_field :password%>
</div>

<div id="formheader">
    <%=f.label "Picture"%>
</div>
<div id="formcontent">
    <%=f.text_field :image, placeholder: "Please put a URl link to your photo here"%>
</div>

<div id="formheader">
    <%=f.submit%>
</div>
<%end%>